<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geekbrains.materialdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.ThemeActivity"
            android:theme="@style/MyAppTheme"/>
        <activity android:name=".activities.StyleActivity" />
        <activity
            android:name=".activities.BottomNavigationActivity"
            android:label="@string/title_activity_bnv"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.TabsActivity"
            android:label="@string/title_activity_tabs"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.RecyclerActivity" />
        <activity android:name=".activities.FabActivity" />
        <activity
            android:name=".activities.CollapsingActivity"
            android:label="@string/title_activity_collapsing"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ProgressBarActivity" />
        <activity
            android:name=".activities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.ToolbarActivity"
            android:label="Toolbar Activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activities.ButtonsActivity" />
        <activity android:name=".activities.BottomActivity" />
        <activity android:name=".activities.SnackActivity" />
        <activity android:name=".activities.TextActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>